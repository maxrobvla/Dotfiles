#!/usr/bin/env bash
rofi_command="rofi -theme $HOME/.config/rofi/config/screenlayout.rasi"

# options:
# nur Laptop
# Büro nur extern
# Büro extern + Laptop
# 1080p extern (spiegeln)
# 1080p extern (erweitern -> Präsentation)
# 1080p nur extern

# Options
laptop="Default"
wqhd1="1440p only"
wqhd2="1440p extend"
fhd1="1080p only"
fhd2="1080p mirror"
fhd3="1080p extend"
ddir="$HOME/.config/rofi/config"

options="$laptop\n$wqhd1\n$wqhd2\n$fhd1\n$fhd2\n$fhd3"

chosen="$(echo -e "$options" | $rofi_command -dmenu -selected-row 0)"
notify-send $chosen
case $chosen in
    $laptop)
        ~/.config/rofi/screenlayouts/Default.sh
        notify-send $laptop
        ;;
    $wqhd1)
        ~/.config/rofi/screenlayouts/WQHD-only.sh
        notify-send $wqhd1
        ;;
    $wqhd2)
        ~/.config/rofi/screenlayouts/WQHD-extend.sh
        notify-send $wqhd2
        ;;
    $fhd1)
        ~/.config/rofi/screenlayouts/FHD-only.sh
        notify-send $fhd1
        ;;
    $fhd2)
        ~/.config/rofi/screenlayouts/FHD-mirror.sh
        notify-send $fhd2
        ;;
    $fhd3)
        ~/.config/rofi/screenlayouts/FHD-extend.sh
        notify-send $fhd3
        ;;
esac

